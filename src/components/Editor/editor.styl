.editor
  border: 1px solid #eee
  height: 100vh
  overflow-y: scroll
  padding: .25rem
  width: 90%
  &:hover
    box-shadow: 0 0 4px #eee

.pt-select select
  width: 100%;

.game-editor, .trainer-editor, .pokemon-editor, .style-editor
  padding: .3rem;

.style-editor
  padding-bottom: 1.5rem;

.trainer-info-field
  align-items: center
  border-bottom: 1px solid #ddd
  border-top: 1px solid #ddd
  display: flex
  justify-content: space-between
  margin: .25rem
  input
    border: 0 solid transparent
    border-left: 1px solid #eee
    border-radius: 2px
    padding: .25rem;

.tab
  align-content: flex-start;
  background: url('../../assets/img/team-box.png');
  background-repeat: no-repeat;
  background-size: 100% 100%;
  display: flex;
  flex-wrap: wrap;
  height: calc(156px * 1.5);
  overflow-y: auto;
  width: calc(170px * 1.5);
  &::-webkit-scrollbar
    width: 2px;
    height: 8px;
    border-radius: 2px;
    background-color: white;
  &::-webkit-scrollbar-thumb
    background: #aaa;
  .tab-title
    flex-basis: 218px;
    flex-grow: 999;
    font-family: 'pokemon_gbregular';
    font-size: 1.5rem;
  .pokemon-icon img,
  .pokemon-icon
    cursor: pointer;
    min-height: 40px;
    max-height: 42px;
    max-width: 42px;
    border: 1px solid transparent;
    transition: 500ms all;
  .pokemon-icon.selected
    border: 1px white dashed;
    transition: 500ms all;
.pokemon-tab
  display: flex;
  justify-content: center;

.current-pokemon
  border: 1px solid #ddd;
  border-radius: .25rem;
  margin: .25rem;
  padding: .25rem;

.current-pokemon-header
  align-items: center;
  display: flex;
  justify-content: flex-start;

.current-pokemon-image
  padding: .25rem;
  border: 1px solid #ccc;
  border-radius: 50%;
  height: 3rem;

.current-pokemon-input-wrapper
  display: inline-flex;
  flex-flow: column;
  padding: .25rem;
  width: 11rem;
  label
    font-size: 10px;
  input
    border: 1px solid #eee
    padding: .25rem;

.current-pokemon-gender
  width: 6rem;

.current-pokemon-status
  width: 5.5rem;

.current-pokemon-moves
  width: 25rem;

.current-pokemon-shiny,
.current-pokemon-champion
  width: 3rem;

.current-pokemon-nature
  width: 6.5rem;

.double-select-wrapper
  display: flex;

.delete-pokemon-button
  color: red;
  cursor: pointer;
  margin-left: auto;

.status-wrapper
  display: inline-flex;
  flex-flow: column;
  padding: .25rem;
  width: 30%;
  vertical-align: top;
  span
    font-size: 10px;
    width: 100%;
 
input[name='metLevel']
  color: #ccc;

.pt-dialog
  width: 90% !important;

.has-nice-scrollbars
  &::-webkit-scrollbar
    width: 5px;
    height: 8px;
    border-radius: 2px;
    background-color: white;
  &::-webkit-scrollbar-thumb
    background: #aaa; 


.style-edit
  align-items: flex-start;
  align-content: center;
  border-bottom: 1px solid #ddd;
  display: flex;
  //margin: .25rem;
  padding: .5rem;
  width: 100%;
  label.pt-label
    margin: 0;
    min-width: 10rem;
  span
    display: inline-block;
    margin-right: .25rem;

.radio-group
  align-content: center;
  align-items: center;
  display: flex;
  .pt-control
    background: #fafafa;
    border-radius: .25rem;
    margin: .25rem;
  label.pt-label
    margin: 0;

.custom-css-input
  font-size: .8rem !important;
  min-height: 10rem;

.color-input
  padding: 0;
  margin-left: .25rem;
  border: none;
  background: #fff;
  border-radius: 50%;
  width: 1rem;
  height: 1rem;
  -webkit-appearance: none;
  &::-webkit-color-swatch
    border: none;
    border-radius: 50%;
    padding: 0;
  &::-webkit-color-swatch-wrapper
    border: none;
    border-radius: 50%;
    padding: 0;