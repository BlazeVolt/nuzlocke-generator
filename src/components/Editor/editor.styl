.editor
  border: 1px solid #eee
  &.pt-dark
    border: 1px solid #000
  height: 100vh
  overflow-y: scroll
  padding: .25rem
  width: 90%;
  &:hover
    box-shadow: 0 0 4px #eee

.pt-select select
  width: 100%;

.game-editor, .trainer-editor, .pokemon-editor, .style-editor
  padding: .3rem;

.base-editor
  border: 1px solid #fafafa;
  border-top: 0 solid transparent !important;

.pt-dark .base-editor
  border: 1px solid #111;

.trainer-info-field
  align-items: center
  border-bottom: 1px solid #ddd
  display: flex
  justify-content: space-between
  input
    background: inherit 
    border: 0 solid transparent
    border-left: 1px solid #eee
    border-radius: 2px
    color: inherit
    padding: .25rem;

.pt-dark .trainer-info-field
  border-bottom: 1px solid #394b59;
  input
    border-left: 1px solid #394b59;

.tab
  align-content: flex-start;
  background: url('../../assets/img/team-box.png');
  background-repeat: no-repeat;
  background-size: 100% 100%;
  display: flex;
  flex-wrap: wrap;
  height: calc(156px * 1.5);
  overflow-y: auto;
  width: calc(170px * 1.5);
  &::-webkit-scrollbar
    width: 2px;
    height: 8px;
    border-radius: 2px;
    background-color: white;
  &::-webkit-scrollbar-thumb
    background: #aaa;
  .tab-title
    flex-basis: 218px;
    flex-grow: 999;
    font-family: 'pokemon_gbregular';
    font-size: 1.5rem;
  .pokemon-icon img,
  .pokemon-icon
    cursor: pointer;
    min-height: 40px;
    max-height: 42px;
    max-width: 42px;
    border: 1px solid transparent;
    transition: 500ms all;
  .pokemon-icon.selected
    border: 1px white dashed;
    transition: 500ms all;

.pt-dark .tab .tab-title
  color: #111;

.pokemon-tab
  display: flex;
  justify-content: center;

.current-pokemon
  border: 1px solid #ddd;
  border-radius: .25rem;
  margin: .25rem;
  padding: .25rem;

.pt-dark .current-pokemon
  border: 1px solid black;


.current-pokemon-header
  align-items: center;
  display: flex;
  justify-content: flex-start;

.current-pokemon-image
  padding: .25rem;
  border: 1px solid #ccc;
  border-radius: 50%;
  height: 3rem;

.pt-dark .current-pokemon-image
  border: none;
  background: #394b59;

.current-pokemon-input-wrapper
  display: inline-flex;
  flex-direction: column;
  padding: .25rem;
  width: 11rem;
  label
    font-size: 10px;
  input
    border: 1px solid #eee
    padding: .25rem;

.current-pokemon-checkbox
  display: inline-flex;
  flex-flow: row-reverse;
  justify-content: flex-end;
  width: 5rem;
  transform: translateY(1rem);

.pt-dark .current-pokemon-input-wrapper
  input
    box-shadow: 0 0 0 0 rgba(19, 124, 189, 0), 0 0 0 0 rgba(19, 124, 189, 0), 0 0 0 0 rgba(19, 124, 189, 0), inset 0 0 0 1px rgba(16, 22, 26, 0.3), inset 0 1px 1px rgba(16, 22, 26, 0.4);
    background: rgba(16, 22, 26, 0.3);
    border: none;
    color: #f5f8fa;

.pt-input-ghost
  border: 0 !important;
  width: 0 !important;
  flex: auto;

.small-input
  width: 5rem;

.current-pokemon-gender
  width: 6rem;

.current-pokemon-status
  width: 5.5rem;

.current-pokemon-moves
  width: 25rem;

.current-pokemon-nature
  width: 6.5rem;

.double-select-wrapper
  display: flex;

.delete-pokemon-button
  color: red;
  cursor: pointer;
  margin-left: auto;

.status-wrapper
  display: inline-flex;
  flex-flow: column;
  padding: .25rem;
  width: 30%;
  vertical-align: top;
  span
    font-size: 10px;
    width: 100%;
 
input[name='metLevel']
  color: #ccc;

.pt-dialog.wide-dialog
  width: 90% !important;

.has-nice-scrollbars
  &::-webkit-scrollbar
    width: 5px;
    height: 8px;
    border-radius: 2px;
    background-color: white;
  &::-webkit-scrollbar-thumb
    background: #aaa; 


.style-edit
  align-items: center;
  align-content: center;
  border-bottom: 1px solid #ddd;
  display: flex;
  //margin: .25rem;
  padding: .5rem;
  width: 100%;
  label.pt-label
    margin: 0;
    min-width: 10rem;
  span
    display: inline-block;
    margin-right: .25rem;

.pt-dark .style-edit
  border-bottom: 1px solid #111;

.radio-group
  align-content: center;
  align-items: center;
  display: flex;
  .pt-control
    border-radius: .25rem;
    margin: .25rem;
  label.pt-label
    margin: 0;

.custom-css-input
  font-size: .8rem !important;
  min-height: 10rem;

.color-input
  padding: 0;
  margin-left: .25rem;
  border: none;
  background: #fff;
  border-radius: 50%;
  width: 1rem;
  height: 1rem;
  -webkit-appearance: none;
  &::-webkit-color-swatch
    border: none;
    border-radius: 50%;
    padding: 0;
  &::-webkit-color-swatch-wrapper
    border: none;
    border-radius: 50%;
    padding: 0;

.color-edit-wrapper
  align-items: center;
  display: flex;
  input[type='text']
    padding-left: .5rem;

.pt-dark .color-text-input
  background: rgba(16, 22, 26, 0.3);
  color: #eee;