.editor
  border: 1px solid #eee
  &.pt-dark
    border: 1px solid #000
  height: 100vh
  overflow-y: scroll
  padding: .25rem
  width: 90%;
  &:hover
    box-shadow: 0 0 4px #eee

.pt-select select
  width: 100%;

.game-editor, .trainer-editor, .pokemon-editor, .style-editor, .hotkeys-editor
  padding: .3rem;

.base-editor
  border: 1px solid #fafafa;
  border-top: 0 solid transparent !important;

.pt-dark .base-editor
  border: 1px solid #111;

.trainer-info-field
  align-items: center
  border-bottom: 1px solid #ddd
  display: flex
  justify-content: space-between
  input
    background: inherit
    border: 0 solid transparent
    border-left: 1px solid #eee
    border-radius: 2px
    color: inherit
    padding: .25rem;

.pt-dark .trainer-info-field
  border-bottom: 1px solid #394b59;
  input
    border-left: 1px solid #394b59;

.box-wrapper
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  .tab
    margin: 2px;

.pokemon-tab
  display: flex;
  justify-content: center;

.current-pokemon
  border: 1px solid #ddd;
  border-radius: .25rem;
  margin: .25rem;
  padding: .25rem;

.pt-dark .current-pokemon
  border: 1px solid black;


.current-pokemon-header
  align-items: center;
  display: flex;
  justify-content: flex-start;

.current-pokemon-image
  padding: 2px;
  border: 1px solid #ccc;
  border-radius: 2px;
  margin-left: 4px;
  height: 2.5rem;

.pt-dark .current-pokemon-image
  border: none;
  background: #394b59;

.current-pokemon-input-wrapper
  display: inline-flex;
  flex-direction: column;
  padding: .25rem;
  //max-width: 10rem;
  label
    font-size: 10px;
  input
    border: 1px solid #eee
    padding: .25rem;

.current-pokemon-number
  width: 6rem;

.current-pokemon-checkbox
  display: inline-flex;
  flex-flow: row-reverse;
  justify-content: flex-end;
  width: 8rem;
  transform: translateY(1rem);
  label
    font-size: 14px;

.pt-dark .current-pokemon-input-wrapper
  input
    box-shadow: 0 0 0 0 rgba(19, 124, 189, 0), 0 0 0 0 rgba(19, 124, 189, 0), 0 0 0 0 rgba(19, 124, 189, 0), inset 0 0 0 1px rgba(16, 22, 26, 0.3), inset 0 1px 1px rgba(16, 22, 26, 0.4);
    background: rgba(16, 22, 26, 0.3);
    border: none;
    color: #f5f8fa;

.pt-input-ghost
  border: 0 !important;
  width: 0 !important;
  flex: auto;

.small-input
  width: 5rem;

.current-pokemon-gender
  width: 6rem;

.current-pokemon-status
  width: 5.5rem;

.current-pokemon-moves
  width: 25rem;

.current-pokemon-nature
  width: 6.5rem;

.double-select-wrapper
  display: flex;

.status-wrapper
  display: inline-flex;
  flex-flow: column;
  padding: .25rem;
  width: 30%;
  vertical-align: top;
  span
    font-size: 10px;
    width: 100%;

input[name='metLevel']
  color: #ccc;

.pt-dialog.wide-dialog
  width: 90% !important;

.has-nice-scrollbars
  &::-webkit-scrollbar
    width: 5px;
    height: 8px;
    border-radius: 2px;
    background-color: white;
  &::-webkit-scrollbar-thumb
    background: #aaa;



.no-pokemon-selected
  display: flex;
  align-items: center;
  padding: .5rem;
  p
    margin: .25rem;
    padding-left: .25rem;

.box
  border-radius: .25rem;
  padding: .25rem;
  margin: .25rem;
  display: flex;
  align-items: center;
  background-position: center;
  flex-wrap: wrap;
  .pokemon-icon
    display: flex;
    align-items: center;
    justify-content: center;
    height: 40px;
    width: 40px;
  .pokemon-icon img,
  .pokemon-icon
    cursor: pointer;
    border: 1px solid transparent;
    transition: 500ms all;
  .pokemon-icon.selected
    border-radius: 50%;
    background: rgba(0, 0, 0, 0.33);
    transition: 500ms all;

.pt-dark .box
  box-shadow: 0 0 .25rem #000;

.Team-box
  background: #15db72;
  background-image: url('../../assets/img/team-box-body.png');

.Boxed-box
  background: #1184d6;
  background-image: url('../../assets/img/boxed-box.png');

.Dead-box
  background: #ce1831;
  background-image: url('../../assets/img/dead-box.png');

.Champs-box
  background: #e5db52;
  background-image: url('../../assets/img/champs-box.png');
