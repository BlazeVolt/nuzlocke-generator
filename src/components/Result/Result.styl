.container {
  border: 1px solid #ddd;
  margin: .5rem auto;
  max-width: 80rem;
  padding-bottom: .5rem;
  overflow: hidden;
}


.logo {
  height: 2.5rem;
}

.trainer-container div span {
  font-size: .8rem;
  letter-spacing: 2px;
}

.trainer-image {
  border-radius: 50%;
  height: 3rem;
  vertical-align: bottom;
}

.pokemon-container {
  display: inline-block;
  padding: 1rem;
  position: relative;
}

.trainer-wrapper {
  display: flex !important;
  align-items: center;
  align-content: center;
}

.nuzlocke-title {
  display: inline-flex;
  font-size: 1.5rem;
  font-weight: light;
}

.badge-wrapper {
  display: inline-flex;
  width: 200px;
  flex-wrap: wrap;
  justify-content: center;
  margin-left: auto;
}

.pokemon-item {
  background: #eee;
  border: 5px solid white;
  border-radius: 50%;
  bottom: 0;
  height: 3rem;
  padding: .5rem;
  position: absolute;
  width: 3rem;
}

.pokemon-shiny {
  background: #eee;
  border-radius: 50%;
  border: 2px solid white;
  height: 2rem;
  width: 2rem;
  padding-top: .2rem;
  padding-left: .5rem;
  position: absolute;
  left: 7rem;
  top: 1rem;
}


.move:last-of-type {
}

.move {
  /*border-bottom: 1px solid #ccc;*/
  /*box-shadow: inset 0 0 3rem rgba(0, 0, 0, 0.3);*/
  border: 4px solid rgba(255, 255, 255, 0.3);
  border-radius: 4px;
  color: #222;
  font-size: .9rem;
  height: 1.7rem;
  margin: .25rem;
  padding: 0;
  text-align: center;
}

.pokemon-nickname {
  font-size: 1.5rem;
}


.Fighting-type {
  background: brown;
  color: #eee;
}

.Ice-type {
  background: #C2F1F2;
}

