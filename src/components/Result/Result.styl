.-type {
  display: none;
}

.boxed-container,
.dead-container {
  margin: 0 auto;
  margin-top: 1rem;
  margin-left: 2rem;
}

.dead-pokemon-container {
  background: #fff;
  border: 1px solid #ddd;
  display: inline-block;
  height: 5.1rem;
  margin-bottom: .25rem;
  position: relative;
  width: 19rem;
  vertical-align: middle;
  text-align: left;
}

.dead-pokemon-container[data-league='true'] {
  background: #EEE8AA;
}

.dead-pokemon-container[data-league='true']::after {
  content: '';
  background: url('../../img/Champion_Ribbon.png');
  display: block;
  height: 30px;
  width: 30px;
  position: absolute;
  top: .25rem;
  right: .25rem;
}

.death-info-container {
  width: 12rem;
  display: inline-block;
  vertical-align: middle;
  margin-top: -8rem;
}

.dead-pokemon-container .pokemon-image {
  border-radius: 0;
  display: inline-block;
  height: 5rem;
  width: 5rem;
  overflow: hidden;
}


h3 {
  margin: .2rem;
  letter-spacing: 4px;
  text-align: center;
}

.pokemon-causeofdeath {
  font-size: .8rem;
  display: inline-block;
}

.boxed-pokemon-container {
  background: #fff;
  border: 1px solid #ddd;
  border-radius: 4px;
  display: inline-block;
  margin-bottom: 4px;
  width: 15.25%;
  position: relative;
}


.pokemon-d-nickname,
.pokemon-levels {
  display: inline-block;
  font-size: .9rem;
  color: #222;
  text-align: center;
  text-shadow: none;
}

