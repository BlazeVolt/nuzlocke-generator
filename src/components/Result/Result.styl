  background: #EB3434;
}

.Grass-type {
  background: #39BF3C
}

.Bug-type {
  background: #AEE359;
}

.Normal-type {
  background: #E1E3D3;
}

.Steel-type {
  background: #B0B0B0;
}

.Rock-type {
  background: #8F795D;
}

.Ground-type {
  background: #9C6E21;
}

.Poison-type {
  background: #75226B;
