.pt-light
    .release-notes
        background: #fafafa;


.release-notes-wrapper
    .release-notes
        margin: .5rem;
        padding: 1rem;
    h1
        font-size: 1.5rem !important;
    h2
        margin-top: .5rem;
        font-size: 1.2rem !important;
    h4
        background: rgba(244, 244, 244, 0.1);
        border-radius: 0.25rem;
        margin: 2px;
        padding: 2px;
        font-size: 70%;
        font-weight: normal;
        width: 4rem;
        text-align: center;
    p
        line-height: 1.4;
        margin-top: .5rem;
        display: flex;
    p img
        max-height: 15rem;
        margin: 0 auto;
        max-width: 100%;
    a
        margin-left: 4px;
    li ul
        margin: 0;

.pt-dark
    .release-dialog
        h1, h2, h3, h4
            color: #fff !important;

.release-dialog
    width: 620px !important;

@media screen and (max-width: 720px)
    .release-dialog
        margin-top: 4rem !important;
        width: 88vw !important;
    .release-notes-wrapper
        .release-notes
            padding: .25rem !important;
            margin: .25rem !important;

.pt-tag-input .pt-tag.pt-tag-removable
    color: unset;

.no-list-item-types
    list-style-type: none;
